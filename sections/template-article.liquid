{% for block in section.blocks %}
  {% case block.type %}
    {% when 'article.title' %}
      <h1>{{ article.title }}</h1>

    {% when 'article.author' %}
      {% if section.settings.enable_author %}
        <small>{{ article.author}}</small>
      {% endif %}

    {% when 'article.published_date' %}
      {% if section.settings.enable_pusblished_date %}
        <time datetime="{{ article.published_at | date: '%y-%m-%d' }}">
          {{ article.published_at | date: '%y-%m-%d' }}
        </time>
      {% endif %}
      
    {% when 'article.featured_image' %}
         <img   src="{{  article.image | image_url: 'large' }}" alt="{{ article.image.alt }}" >

    {% when 'article.content' %}
      <div class="">
        {{ article.content }}
      </div>

     {%else %}
    {% endcase %}
  {% endfor %}


  {% schema %}
    {
      "name": "Template Article",
      "settings": [
        {
          "type": "checkbox",
          "id": "enable_author",
          "default": true,
          "label": "Display Author Name"
        }, {
          "type": "checkbox",
          "id": "enable_pusblished_date",
          "default": true,
          "label": "Display published Date"
        }
      ],
      "blocks": [
        {
          "type": "article_title",
          "name": "Title",
          "limit": 1
        },
        {
          "type": "article_author",
          "name": "Author",
          "limit": 1
        },
        {
          "type": "article_published_date",
          "name": "Published Date",
          "limit": 1
        },
        {
          "type": "featured_image",
          "name": "Thumbnail",
          "limit": 1
        }, {
          "type": "article_content",
          "name": "Content",
          "limit": 1
        }
      ]
    }
  {% endschema %}